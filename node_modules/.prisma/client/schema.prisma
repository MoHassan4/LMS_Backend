generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String    @id @default(uuid())
  title       String
  description String
  banner      String?
  price       Float
  grade       String
  subject     String
  createdAt   DateTime  @default(now())
  sections    Section[]
}

model Section {
  id          String   @id @default(uuid())
  title       String
  description String?
  order       Int
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
}

model Lesson {
  id        String     @id @default(uuid())
  title     String
  type      LessonType
  order     Int
  meta      Json?
  sectionId String
  section   Section    @relation(fields: [sectionId], references: [id], onDelete: Cascade)
}

enum LessonType {
  VIDEO
  FILE
  QUIZ
}
