generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String
  banner      String?
  price       Float
  grade       String
  subject     String
  createdAt   DateTime @default(now())
  sections    Section[] 
  students    StudentCourse[]
  assignments  Assignment[]

  subscriptions Subscription[]
}

model Section {
  id          String   @id @default(uuid())
  title       String
  description String?
  order       Int
  courseId    String
  course      Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  assignments  Assignment[] 
  createdAt DateTime @default(now())
}

model Lesson {
  id     String   @id @default(uuid())
  title  String
  type   LessonType
  order  Int
  meta   Json?
  sectionId String
  section   Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

enum LessonType {
  VIDEO
  FILE
  ASSIGNMENT
}

model Student {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String
  parentPhone String?
  grade     String
  notes     String?
  status    StudentStatus @default(ACTIVE)
  createdAt DateTime @default(now())

  courses   StudentCourse[]
  studentAssignments StudentAssignment[]
  subscriptions Subscription[]
  couponUsages  CouponUsage[]
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

model StudentCourse {
  id        String  @id @default(uuid())
  studentId String
  courseId  String

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, courseId])

  createdAt DateTime @default(now())
}

model Assignment {
  id          String   @id @default(uuid())
  title       String
  duration    Int
  passDegree  Int
  totalDegree Int
  questionsCount Int

  courseId    String
  sectionId   String

  createdAt   DateTime @default(now())

  course   Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  section  Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  questions Question[]

   studentAssignments StudentAssignment[]

  status AssignmentStatus @default(DRAFT)

}

enum AssignmentStatus {
  DRAFT
  OPEN
  CLOSED
}

model Question {
  id           String   @id @default(uuid())
  type         QuestionType
  header       Json     // { text?: string, image?: string }
  degree       Int

  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  options Option[]
}

enum QuestionType {
  MCQ
  TRUE_FALSE
}


model Option {
  id         String  @id @default(uuid())
  text       String
  isCorrect  Boolean

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model StudentAssignment {
  id           String   @id @default(uuid())
  studentId    String
  assignmentId String
  score        Int
  passed       Boolean
  submittedAt  DateTime @default(now())
  createdAt    DateTime @default(now())

  student   Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  assignment Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@unique([studentId, assignmentId])
}

model Subscription {
  id               String   @id @default(uuid())

  studentId        String
  courseId         String

  priceBeforeDiscount Float
  discountAmount     Float   @default(0)
  finalPrice         Float

  paymentMethod     PaymentMethod

  status            SubscriptionStatus @default(ACTIVE)

  startedAt         DateTime @default(now())
  endsAt            DateTime?

  createdAt         DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  couponUsage CouponUsage?
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELED
}

enum PaymentMethod {
  CASH
  CARD
  VODAFONE_CASH
  FAWRY
  BANK_TRANSFER
}

model Discount {
  id            String   @id @default(uuid())
  name          String?

  type          DiscountType
  value         Float

  appliesTo     DiscountAppliesTo
  courseIds     String[]   // لو appliesTo = COURSES

  maxStudents   Int?
  usedCount     Int        @default(0)

  startDate     DateTime
  endDate       DateTime

  isActive      Boolean    @default(true)

  createdAt     DateTime   @default(now())
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum DiscountAppliesTo {
  ALL
  COURSES
}

model Coupon {
  id                 String   @id @default(uuid())
  code               String   @unique

  type               DiscountType
  value              Float

  maxUsage           Int?
  maxUsagePerStudent Int? @default(1)

  usedCount          Int      @default(0)

  expiresAt          DateTime
  isActive           Boolean  @default(true)

  createdAt          DateTime @default(now())

  usages CouponUsage[]
}

model CouponUsage {
  id             String   @id @default(uuid())

  couponId       String
  studentId      String
  subscriptionId String   @unique

  usedAt         DateTime @default(now())

  coupon       Coupon       @relation(fields: [couponId], references: [id], onDelete: Cascade)
  student      Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@unique([couponId, studentId, subscriptionId])
}

