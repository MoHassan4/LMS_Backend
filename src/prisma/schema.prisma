generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String
  banner      String?
  price       Float
  grade       String
  subject     String
  createdAt   DateTime @default(now())
  sections    Section[] 
  students    StudentCourse[]
  assignments  Assignment[]
}

model Section {
  id          String   @id @default(uuid())
  title       String
  description String?
  order       Int
  courseId    String
  course      Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  assignments  Assignment[] 
  createdAt DateTime @default(now())
}

model Lesson {
  id     String   @id @default(uuid())
  title  String
  type   LessonType
  order  Int
  meta   Json?
  sectionId String
  section   Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

enum LessonType {
  VIDEO
  FILE
  ASSIGNMENT
}

model Student {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String?
  parentPhone String?
  notes     String?
  status    StudentStatus @default(ACTIVE)
  createdAt DateTime @default(now())

  courses   StudentCourse[]
  studentAssignments StudentAssignment[]
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

model StudentCourse {
  id        String  @id @default(uuid())
  studentId String
  courseId  String

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, courseId])

  createdAt DateTime @default(now())
}

model Assignment {
  id          String   @id @default(uuid())
  title       String
  duration    Int
  passDegree  Int
  totalDegree Int
  questionsCount Int

  courseId    String
  sectionId   String

  createdAt   DateTime @default(now())

  course   Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  section  Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  questions Question[]

   studentAssignments StudentAssignment[]

  status AssignmentStatus @default(DRAFT)

}

enum AssignmentStatus {
  DRAFT
  OPEN
  CLOSED
}

model Question {
  id           String   @id @default(uuid())
  type         QuestionType
  header       Json     // { text?: string, image?: string }
  degree       Int

  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  options Option[]
}

enum QuestionType {
  MCQ
  TRUE_FALSE
}


model Option {
  id         String  @id @default(uuid())
  text       String
  isCorrect  Boolean

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model StudentAssignment {
  id           String   @id @default(uuid())
  studentId    String
  assignmentId String
  score        Int
  passed       Boolean
  submittedAt  DateTime @default(now())

  student   Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  assignment Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@unique([studentId, assignmentId])
}

